/* pages/index/index.wxss */
.header {
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  background: #409eff;
}

.header .iconfont {
  color: #fff;
  font-size: 40rpx;
  padding: 0 20rpx;
}

.icon-caidan {
  float: left;
}

.icon-sousuo {
  float: right;
}

.book-item {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
}

.book-item + .book-item {
  border-top: 1rpx solid #efefef;
}

.book-item .img {
  flex-shrink: 0;
  flex-grow: 0;
  flex-basis: 160rpx;
  width: 160rpx;
  height: 200rpx;
  background-color: #ccc;
}

.book-item .info {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 0 15rpx;
}

.book-item .info .title {
  font-size: 32rpx;
  margin-bottom: 20rpx;
  color: #000;
}

.book-item .info .newest {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  color: #666;
}

.book-item .info .update-time {
  font-size: 24rpx;
  color: #aaa;
}

.book-item .icon-caidan1 {
  color: #666;
  flex-shrink: 0;
  flex-grow: 0;
  flex-basis: 60rpx;
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
}

.finish-text {
  font-size: 28rpx;
  color: #b5b5b5;
  text-align: center;
  line-height: 80rpx;
}
