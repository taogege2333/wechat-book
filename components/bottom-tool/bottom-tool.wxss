/* components/bottom-tool/bottom-tool.wxss */
.bottom-tool {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.mask {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.3);
  opacity: 0;
}

.content {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  background: #ffffff;
  border-top-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
  padding: 40rpx 40rpx 0;
  transform: translateY(100%);
  background: #f5f5f5;
}

.book {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.book .left {
  flex-shrink: 0;
  flex-grow: 0;
  flex-basis: 120rpx;
  width: 120rpx;
  height: 150rpx;
  margin-right: 20rpx;
}

.book .center {
  flex: 1;
}

.book .center .name {
  font-size: 32rpx;
  color: #000;
  margin-bottom: 20rpx;
}

.book .center .author {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.book .center .newest-section {
  width: calc(100vw - 300rpx);
  font-size: 20rpx;
  color: #aaa;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.book .right {
  flex-shrink: 0;
  flex-grow: 0;
  width: 100rpx;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0;
  font-size: 28rpx;
  font-weight: 0;
  background: transparent;
  border: 1px solid #409eff;
  color: #409eff;
  border-radius: 25rpx;
}

.tools {
  display: flex;
  flex-wrap: wrap;
  height: 300rpx;
}

.tools .tools-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 22rpx;
  color: #999;
}

.tools .iconfont {
  font-size: 44rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.tools .switch {
  width: 80rpx;
  height: 44rpx;
  margin-bottom: 10rpx;
  position: relative;
}

.switch .switch-wrapper {
  width: 100%;
  height: 36rpx;
  border-radius: 18rpx;
  background: #ffffff;
  border: 1rpx solid #dedede;
  box-sizing: border-box;
  position: absolute;
  left: 0;
  bottom: 0;
  transition: all 200ms linear;
}

.switch .switch-dot {
  position: absolute;
  top: -2rpx;
  left: -1rpx;
  width: 36rpx;
  height: 36rpx;
  border-radius: 18rpx;
  background: #ffffff;
  border: 1rpx solid #dedede;
  box-sizing: border-box;
  transition: all 200ms linear;
}

.switch.checked .switch-wrapper {
  background: #409eff;
}

.switch.checked .switch-dot {
  left: 44rpx;
}

.cancel {
  background: transparent;
  width: 100% !important;
  height: 80rpx;
  color: #409eff;
  font-size: 24rpx;
  line-height: 48rpx;
  font-weight: 0;
}

.cancel:hover {
  background: #efefef;
}
